#include <iostream>

using namespace std;

int main()
{
    int i , j , n , a ;
    cout<<"How many rows in upper slant ?"<<endl;
    cin>>a;
  
    for(i=1;i<=a;i++) //main loop
   {
     for(j=a;j>i;j--)  // first slant space
     {
         cout<<" ";
     }
     cout<<"*"; // first slant
     for(n=(i-1)*2;n>=1;n--)
     {
         cout<<" "; // second space
     }
     cout<<"*";
     for(j=a;j>i;j--) // 3rd space
     {
         cout<<" ";
     }
      for(j=a;j>i;j--)  // 4th slant space
     {
         cout<<" ";
     }
     cout<<"*"; //3rd slant
     for(n=(i-1)*2;n>=1;n--)
     {
         cout<<" "; // 5th space
     }
     cout<<"*"<<endl; //4th slant
    }
    
    
     for(i=1;i<=2*a;i++)
     {
         for(j=i;j>1;j--) 
        {
         cout<<" "; //lower first space
        }
       cout<<"*"; // lower slant
       for(n=i;n<2*a;n++)
       {
           cout<<" "; // lower second space
       }
       for(n=i;n<2*a;n++)
       {
           cout<<" "; // lower third space
       }
       cout<<"*"<<endl;
             
     }
     cout<<"Yeh lo mera dil lelo ";
   
}
